<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Active tab -->
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true"><layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/teal_accent" />
                </shape></item>
            <item android:bottom="4dp"><shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                </shape></item>
        </layer-list></item>
    <!-- Inactive tab -->
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape></item>
    <!-- Pressed tab -->
    <item android:drawable="@color/transparent" android:state_pressed="true"/>
    <!-- Selected tab (using d-pad) -->
    <item android:drawable="@color/transparent" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>

</selector>